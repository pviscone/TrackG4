#Avvia visualizzazione con OpenGL
/vis/open OGL

#Disegna il volume
/vis/drawVolume

#Disegna le tracce delle particelle
/vis/viewer/set/autoRefresh true
/vis/scene/add/trajectories smooth

#Accumula tutti gli eventi in una run
/vis/scene/endOfEventAction accumulate

#Aggiungi assi
/vis/scene/add/axes -0.6 -0.6 -0.6 0.2 m